<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 第一层设置-->
    <!--android:top 顶部的偏移量-->
    <!--android:bottom 底部的偏移量-->
    <!--android:left 左边的偏移量-->
    <!--android:right 右边的偏移量-->
    <!--    android:radius 圆角设置-->


    <!--    位置设置-->
    <item

        android:top="0dp"
        >
        <shape>

            <solid android:color="@color/button_high" />
            <!--        圆角设置-->
            <!--            <corners android:radius="5dp" />-->
            <corners
                android:topLeftRadius="5dp"
                android:topRightRadius="5dp"
                android:bottomLeftRadius="25dp"
                android:bottomRightRadius="5dp"
                />

            <!--        边框设置-->
            <stroke
                android:width="1dp"
                android:color="@color/button_frame"
                />

        </shape>

    </item>



    <!--第二层设置-->

    <!--    android:top ="3dp"-->
    <!--    android:bottom ="3dp"-->
    <!--    android:left ="3dp"-->
    <!--    android:right ="3dp"-->
    <item
        android:top ="2dp"
        android:bottom ="4dp"
        android:left ="2dp"
        android:right ="2dp"

        >
        <shape>
            <solid android:color="@color/button_start" />
            <!--        圆角设置-->
            <!--        <corners android:radius="5dp" />-->
            <corners
                android:topLeftRadius="5dp"
                android:topRightRadius="5dp"
                android:bottomLeftRadius="25dp"
                android:bottomRightRadius="5dp"
                />

            <!--        渐变-->
            <gradient
                android:angle="90"
                android:centerX="100%"
                android:startColor="@color/button_start"
                android:centerColor="@color/button_center"
                android:endColor="@color/button_end"
                android:type="linear"
                />


        </shape>




    </item>



</layer-list>